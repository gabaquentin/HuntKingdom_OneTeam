{% extends 'baseAdmin.html.twig' %}
{% block updaterec %}
{{ form_start (form) }}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Service Apr√®s-Vente <small></small></h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                      <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Reclamations</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i
                                            class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <br class="" action="" method="post" novalidate>
                        <span class="section">Modifier Reclamation</span>
                        <br></br>
                        <div class="col-lg-8">
                            <form class="form-contact contact_form" action="" method="post" id="contactForm"
                                  novalidate="novalidate">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">

                                            <label class="col-form-label col-md-3 col-sm-3  label-align"><h6>Type Reclamation</h6><span
                                                        class="required"></span></label>
                                            <div class="col-md-8 col-sm-8">
                                                {{ form_widget(form.typeReclamation, {'attr': {'class': 'form-control'}}) }}
                                                <span class="error-message"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="col-form-label col-md-3 col-sm-3  label-align"><h6>Description</h6><span
                                                        class="required"></span></label>
                                            <div class="col-md-8 col-sm-8">
                                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                                <span class="error-message"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="col-form-label col-md-3 col-sm-3  label-align"><h6>Date Reclamation</h6><span
                                                        class="required"></span></label>
                                            <div class="col-md-8 col-sm-8">
                                                {{ form_widget(form.dateReclamation, {'attr': {'class': 'form-control'}}) }}
                                                <span class="error-message"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="col-form-label col-md-3 col-sm-3  label-align"><h6>Date Achat</h6><span
                                                        class="required"></span></label>
                                            <div class="col-md-8 col-sm-8">
                                                {{ form_widget(form.dateAchat, {'attr': {'class': 'form-control'}}) }}
                                                <span class="error-message"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="col-form-label col-md-3 col-sm-3  label-align"><h6>Email</h6><span
                                                        class="required"></span></label>
                                            <div class="col-md-8 col-sm-8">
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                                <span class="error-message"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group">
                                            <label class="col-form-label col-md-3 col-sm-3  label-align"><h6>Etat Reclamation</h6><span
                                                        class="required"></span></label>
                                            <div class="col-md-8 col-sm-8">
                                                {{ form_widget(form.etatReclamation, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group mt-3">
                                    <center><button type="submit" class="btn btn-round btn-secondary">Modifier</button></center>
                                </div>
                            </form>
                        </div>
                 
                    </div>
                </div>
            </div>
         {% endblock %}