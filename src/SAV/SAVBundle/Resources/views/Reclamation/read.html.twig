{% extends 'baseAdmin.html.twig' %}
{% block titleAdmin %} Liste Reclamation {% endblock %}
{% block readrec %}

        <!-- page content -->
        <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Reclamations <small></small></h3>
                    </div>
                    <div class="title_right">
                        <div class="col-md-5 col-sm-5   form-group row pull-right top_search">
                            <form method="post">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="typeReclamation">
                                    <span class="input-group-btn">
                               <button class="btn btn-secondary" type="submit">Go!</button>
                                </span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

                <div class="clearfix"></div>
                <div class="col-md-12 col-sm-12  ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Liste de Reclamation </h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </div>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>

                        <div class="x_content">
                            <div class="table-responsive">
                                <table class="table table-striped jambo_table bulk_action">
                                    <thead>
                                    <tr class="headings">
                                        <th class="column-title">Reference Reclamation</th>
                                        <th class="column-title">Type de réclamation </th>
                                        <th class="column-title">Description </th>
                                        <th class="column-title">Date Reclamation</th>
                                        <th class="column-title">Date Achat</th>
                                        <th class="column-title">Email </th>
                                        <th class="column-title">Etat de réclamation</th>
                                        <th class="column-title no-link last"><span class="nobr">Supprimer</span>
                                        <th class="column-title no-link last"><span class="nobr">Modifier</span>
                                        </th>
                                        <th class="bulk-actions" colspan="7">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                    </thead>
                                    {% for r in Reclamations %}
                                        <tr>
                                            <td> {{ r.id}} </td>
                                            <td> {{ r.typeReclamation }} </td>
                                            <td> {{ r.description }} </td>
                                            <td> {{ r.dateReclamation |date("d/m/y") }} </td>
                                            <td> {{ r.dateAchat|date("d/m/y") }} </td>
                                            <td> {{ r.email }} </td>
                                            <td> {{ r.etatReclamation }} </td>

                                            <td> <a href="{{ path ('sav_delete' ,{'id':r.id}) }}"> supprimer</a></td>
                                            <td> <a href="{{ path ('sav_update' ,{'id':r.id}) }}"> Modifier</a></td>
                                            <td>  <a href="{{ path('sav_pdf',{ 'id': r.id }) }}" class="btn btn-app">
                                                <i class="fa fa-save"></i> Save </a></td>

                                        </tr>

                                    {% endfor %}

                                </table>
                            </div>

                        </div>


                        </div>
                    </div>
                </div>
            </div>
    </div>
{% endblock %}