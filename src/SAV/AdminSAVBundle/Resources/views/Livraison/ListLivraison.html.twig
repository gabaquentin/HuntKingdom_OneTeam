{% extends 'baseAdmin.html.twig' %}
{% block titleAdmin %} Liste Livraison {% endblock %}
{% block list_liv %}

    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Preventions <small></small></h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                      <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

    <div class="col-md-12 col-sm-12  ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Liste de Livraison </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Settings 1</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                        </div>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                        <tr class="headings">
                            <th class="column-title">Reference Livraison </th>
                            <th class="column-title">Date Livraison</th>
                            <th class="column-title">Prix Livraison </th>
                            <th class="column-title">Livreur </th>
                            <th class="column-title no-link last"><span class="nobr">Supprimer</span>
                            <th class="column-title no-link last"><span class="nobr">Modifier</span>
                            </th>
                            <th class="bulk-actions" colspan="7">
                                <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                            </th>
                        </tr>
                        </thead>
                        {% for Livraison in Livraisons %}
                            <tr>
                                <td> {{ Livraison.id }} </td>
                                <td> {{ Livraison.dateliv|date("d/m/y") }} </td>
                                <td> {{ Livraison.prixliv }} </td>
                                {% if Livraison.Livreur %}
                                    <td> {{ Livraison.Livreur.id }}  </td>
                                {% endif %}
                                <td> <a href="{{ path ('admin_sav_deleteLivraison' ,{'id':Livraison.id}) }}"> supprimer</a></td>
                                <td> <a href="{{ path ('admin_sav_updateLivraison' ,{'id':Livraison.id}) }}"> Modifier</a></td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>


            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}