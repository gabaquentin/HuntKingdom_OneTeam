{% extends 'base.html.twig' %}
{% block admin_boutique_ajouter %}

    <body class="nav-md">

    <!-- /top navigation -->

    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Produits <small></small></h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                      <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Liste des Produits <small>Affichage</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </div>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-box table-responsive">
                                        {% for message in app.flashes('information') %}
                                            <div class="alert alert-warning alert-dismissible fade show"> {{ message }}
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>

                                        {% endfor %}
                                        {% for message in app.flashes('info') %}
                                            <div class="alert alert-danger alert-dismissible fade show"> {{ message }}
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>

                                        {% endfor %}

                                        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">

                                            <thead>
                                            <tr>
                                                <th><center>ID Produit</center></th>
                                                <th><center>Libéllé</center></th>
                                                <th><center>Quantité Disponible</center></th>
                                                <th><center>Catégorie:</center></th>
                                                <th><center>Prix</center></th>
                                                <th><center>Fournisseur</center></th>
                                                <th><center>Description</center></th>


                                                <th><center>Action</center></th>
                                            </tr>
                                            </thead>


                                            <tbody>
                                            {% for p in produits %}
                                            <tr>
                                                <td><center>{{ p.id }} </center></td>
                                                <td><center><a href="{{path ('admin_boutique_details',{'id':p.id})}}">{{ p.nomProduit }}</a> </center></td>
                                                <td><center>{{ p.quantite}}</center></td>
                                                <td><center>{{ p.categorie}}</center></td>
                                                <td><center>{{ p.prix}} DT</center></td>
                                                <td><center>{{ p.Fournisseur.nomFournisseur }}</center></td>
                                                <td><center>{{ p.description}}</center></td>

                                                <td> <center> <a href="{{path ('admin_boutique_modifier',{'id':p.id})}}" class="btn btn-round btn-info btn-xs"><i class="fa fa-pencil"></i> Modifier </a>
                                               <a href="{{path ('admin_boutique_supprimer',{'id':p.id})}}" class="btn btn-round btn-danger btn-xs"><i class="fa fa-trash-o"></i> Supprimer </a></center></td>

                                            </tr>
                                            {% endfor %}





                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- /page content -->

                <!-- footer content -->

                <!-- /footer content -->
{% endblock %}